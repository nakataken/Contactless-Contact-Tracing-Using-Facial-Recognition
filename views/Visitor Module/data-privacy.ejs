                    <button id="submit" class="btn btn-grad col-12" type="submit">
                        <a style="color:white; "href="/visitor/register">Continue</a>
                    </button>
                    <div class="col-12 d-flex justify-content-center" >
                        <a id="backPage"class="mx-auto mt-4">Go back to Data Privacy Notice</a>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <script>
        $("#initialSubmit").click(function() {
            $("#data-notice").hide();
            $("#data-privacy").show();
        });
        $("#backPage").click(function() {
            $("#data-privacy").hide();
            $("#data-notice").show();
        });
